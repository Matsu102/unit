<%#= render 'layouts/error_message', resource: * %>

<% unless resource.errors.empty? %>
  <script type= "text/javascript">
    <% resource.errors.full_messages.each do |msg| %>
      <script>toastr.error('<%= msg %>', '', { closeButton: true, progressBar: true, positionClass: 'toast-top-center' });</script>
    <% end %>
  </script>
<% end %>

<p>Sign up 新規登録</p>
<div class="row justify-content-lg-center">

  <div class="col-12">
    <div class="text-center">
      <% if 'artist' == @user_type %>
        <p>New Artist 新しいアーティストの情報入力</p>
      <% elsif 'fan' == @user_type %>
        <p>New Fan 新しいファンの情報入力</p>
      <% else %>
        <p>不正なエラー</p>
      <% end %>
    </div>
  </div>

  <% if ('artist' == @user_type) || ('fan' == @user_type) %>
    <%= form_with model: @user, url: create_user_registration_path, id: 'new_user', class: 'new_user' do |f| %>
    <%= render 'layouts/error_message', resource: f.object %>
      <div class="d-flex justify-content-center">
        <div class="col-lg-5 gray-400-back px-3 py-5">
          <div class="form-row d-flex justify-content-center align-items-center mx-5">
            <div class="col-lg-4">
              <span>お名前</span>
            </div>
            <div class="col-lg-4">
              <%= f.text_field :last_name, class: 'form-control', :placeholder => '苗字' %>
            </div>
            <div class="col-lg-4">
              <%= f.text_field :first_name, class: 'form-control', :placeholder => '名前' %>
            </div>
            <div class="col-lg-4 mt-2 ">
              <%= f.label :handle_name, 'ニックネーム' %>
            </div>
            <div class="col-lg-8 mt-2">
              <%= f.text_field :handle_name, class: 'form-control', :placeholder => 'ニックネーム' %>
            </div>
            <div class="col-lg-4 mt-2">
              <%= f.label :email, 'メールアドレス' %>
            </div>
            <div class="col-lg-8 mt-2">
              <%= f.email_field :email, class: 'form-control', :placeholder => 'xxx@gmail.com' %>
            </div>
            <div class="col-lg-4 mt-2">
              <%= f.label :telephone_number, '電話番号' %>
            </div>
            <div class="col-lg-8 mt-2">
              <%= f.text_field :telephone_number, class: 'form-control', :placeholder => 'XXX-XXXX-XXXX' %>
            </div>
            <div class="col-lg-4 mt-2">
              <%= f.label :password, "パスワード" %>
            </div>
            <div class="col-lg-8 mt-2">
              <%= f.password_field :password, class: 'form-control', :placeholder => '6～15文字の半角英数記号(!?-_.)' %>
            </div>
            <div class="col-lg-4 mt-2">
              <%= f.label :password_confirmation, 'パスワード（確認用）' %>
            </div>
            <div class="col-lg-8 mt-2">
              <%= f.password_field :password_confirmation, class: 'form-control', :placeholder => 'パスワードを再入力' %>
            </div>
            <%= f.hidden_field :user_type, value: @user_type %>
            <div class="col-lg-12 d-flex justify-content-center mt-4">
              <%= f.submit '新規登録', class: 'btn btn-secondary' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  <% else %>
    <p class="my-5"><%= link_to 'こちら', branch_path %>から会員種別をお選びください。</p>
  <% end %>

</div>